#!/bin/sh

reboot_after=$1

echo "Spawning debug shell so you can have a look ..."
if [ "$reboot_after" = "1" ] ; then
    echo "Type ctrl-d or \"exit\" to reboot"
else
    echo "Type ctrl-d or \"exit\" to continue boot process"
fi
setsid cttyhack /bin/sh

if [ "$reboot_after" = "1" ] ; then
    reboot
fi
